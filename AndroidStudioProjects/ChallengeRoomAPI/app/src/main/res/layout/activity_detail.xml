    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    tools:context=".activities.DetailActivity">

    <fragment
        android:id="@+id/detailBottunFrag"
        android:name="com.example.challengeroomapi.fragments.DetailButtonFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_detail_button" />

    <fragment
        android:id="@+id/detailContentFrag"
        android:name="com.example.challengeroomapi.fragments.DetailContentFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_add_book" />
</LinearLayout>