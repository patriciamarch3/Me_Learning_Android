<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="GreenTheme" parent="Base.AppTheme.Green" />
    <style name="Base.AppTheme.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLightGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="RedTheme" parent="Base.AppTheme.Red" />
    <style name="Base.AppTheme.Red" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLightRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>

    <style name="BlueTheme" parent="Base.AppTheme.Red" />
    <style name="Base.AppTheme.Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLightBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>

    <style name="FloatingHint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
