<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/addBookFrag"
        android:name="com.example.challengeroomapi.fragments.AddBookFrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_add_book" />

    <fragment
        android:id="@+id/bookshelfFrag"
        android:name="com.example.challengeroomapi.fragments.BookshelfFrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_bookshelf" />

</LinearLayout>